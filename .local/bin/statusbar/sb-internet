#!/bin/sh

# Show wifi ðŸ“¶ and percent strength or ðŸ“¡ if none.
# Show ðŸŒ if connected to ethernet or âŽ if none.
# Show ðŸ”’ if a vpn connection is active

case $BLOCK_BUTTON in
	1) networkmanager_dmenu; pkill -RTMIN+4 dwmblocks ;;
    3)  "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

case "$(cat /sys/class/net/w*/operstate 2>/dev/null)" in
	down) wifiicon="ïž" ;;
	up) wifiicon="$(awk '/^\s*w/ { print "ï‡«", int($3 * 100 / 70) "% " }' /proc/net/wireless)" ;;
esac

printf "%s%s%s\n" "$wifiicon" "$(sed "s/down/ï¦/;s/up/ï›¿/" /sys/class/net/e*/operstate 2>/dev/null)" "$(sed "s/.*/ï€£/" /sys/class/net/tun*/operstate 2>/dev/null)"

